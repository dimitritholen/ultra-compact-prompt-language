{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*@(def|workflow)\\b",
      "end": "^\\s*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^.*(@def|@workflow|@chain|@if|@elif|@else|@loop):.*$",
    "decreaseIndentPattern": "^\\s*(@elif|@else).*$"
  },
  "wordPattern": "(@\\w+|\\$\\w+|\\w+)"
}
