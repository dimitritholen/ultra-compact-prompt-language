{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "UCPL",
  "scopeName": "source.ucpl",
  "patterns": [
    {
      "include": "#yaml-frontmatter"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#tool-invocations"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#constraints"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    }
  ],
  "repository": {
    "yaml-frontmatter": {
      "name": "meta.embedded.block.yaml",
      "begin": "\\A(---)\\s*$",
      "end": "^(---)\\s*$",
      "beginCaptures": {
        "1": {
          "name": "punctuation.definition.block.yaml"
        }
      },
      "endCaptures": {
        "1": {
          "name": "punctuation.definition.block.yaml"
        }
      },
      "patterns": [
        {
          "match": "^\\s*(format|version|parser|description|tags)\\s*(:)\\s*(.*)$",
          "captures": {
            "1": {
              "name": "entity.name.tag.yaml"
            },
            "2": {
              "name": "punctuation.separator.key-value.yaml"
            },
            "3": {
              "name": "string.unquoted.yaml"
            }
          }
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ucpl",
          "match": "#.*$"
        }
      ]
    },
    "tool-invocations": {
      "patterns": [
        {
          "name": "meta.tool-invocation.ucpl",
          "match": "(@@)([a-z]+)(:)([a-z]+)(\\[)([^\\]]*)(\\])?",
          "captures": {
            "1": {
              "name": "keyword.operator.tool-invocation.ucpl"
            },
            "2": {
              "name": "entity.name.function.tool-category.ucpl"
            },
            "3": {
              "name": "punctuation.separator.tool.ucpl"
            },
            "4": {
              "name": "entity.name.function.tool-subcategory.ucpl"
            },
            "5": {
              "name": "punctuation.definition.parameters.begin.ucpl"
            },
            "6": {
              "patterns": [
                {
                  "include": "#tool-parameters"
                }
              ]
            },
            "7": {
              "name": "punctuation.definition.parameters.end.ucpl"
            }
          }
        },
        {
          "name": "meta.tool-invocation.simple.ucpl",
          "match": "(@@)([a-z]+)(:)([a-z]+)",
          "captures": {
            "1": {
              "name": "keyword.operator.tool-invocation.ucpl"
            },
            "2": {
              "name": "entity.name.function.tool-category.ucpl"
            },
            "3": {
              "name": "punctuation.separator.tool.ucpl"
            },
            "4": {
              "name": "entity.name.function.tool-subcategory.ucpl"
            }
          }
        }
      ]
    },
    "tool-parameters": {
      "patterns": [
        {
          "match": "\\b([a-z_]+)(=)([^,\\]]+)",
          "captures": {
            "1": {
              "name": "variable.parameter.tool.ucpl"
            },
            "2": {
              "name": "keyword.operator.assignment.ucpl"
            },
            "3": {
              "patterns": [
                {
                  "include": "#strings"
                },
                {
                  "include": "#variables"
                },
                {
                  "include": "#numbers"
                },
                {
                  "match": "\\b(true|false)\\b",
                  "name": "constant.language.boolean.ucpl"
                },
                {
                  "match": "[^,\\]]+",
                  "name": "string.unquoted.ucpl"
                }
              ]
            }
          }
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "meta.directive.control.ucpl",
          "match": "(@)(if|elif|else|loop|until|chain)\\b",
          "captures": {
            "1": {
              "name": "punctuation.definition.directive.ucpl"
            },
            "2": {
              "name": "keyword.control.directive.ucpl"
            }
          }
        },
        {
          "name": "meta.directive.definition.ucpl",
          "match": "(@)(def|use)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(:)?",
          "captures": {
            "1": {
              "name": "punctuation.definition.directive.ucpl"
            },
            "2": {
              "name": "keyword.control.directive.ucpl"
            },
            "3": {
              "name": "entity.name.function.macro.ucpl"
            },
            "4": {
              "name": "punctuation.separator.ucpl"
            }
          }
        },
        {
          "name": "meta.directive.general.ucpl",
          "match": "(@)(role|task|scope|out|principles|workflow|add)(:)\\s*([^\\n|]+)?",
          "captures": {
            "1": {
              "name": "punctuation.definition.directive.ucpl"
            },
            "2": {
              "name": "keyword.control.directive.ucpl"
            },
            "3": {
              "name": "punctuation.separator.ucpl"
            },
            "4": {
              "patterns": [
                {
                  "match": "\\b(dev|audit|teach|edit|analyze|debug|design|translate)\\b",
                  "name": "constant.language.role.ucpl"
                },
                {
                  "match": "\\b(fix|explain|refactor|review|summarize|generate|test|optimize|doc|compare)\\b",
                  "name": "constant.language.task.ucpl"
                },
                {
                  "match": "\\b(code|bullets|table|json|yaml|steps|diagram|prose)\\b",
                  "name": "constant.language.output.ucpl"
                },
                {
                  "match": "\\b(concise|formal|beginner|expert|secure|fast|minimal)\\b",
                  "name": "constant.language.modifier.ucpl"
                },
                {
                  "match": "[^|\\n]+",
                  "name": "string.unquoted.directive-value.ucpl"
                }
              ]
            }
          }
        }
      ]
    },
    "constraints": {
      "patterns": [
        {
          "name": "keyword.operator.constraint.mandatory.ucpl",
          "match": "^\\s*(!)(?=[a-zA-Z_])"
        },
        {
          "name": "keyword.operator.constraint.optional.ucpl",
          "match": "^\\s*(\\?)(?=[a-zA-Z_])"
        },
        {
          "name": "keyword.operator.constraint.avoid.ucpl",
          "match": "^\\s*(~)(?=[a-zA-Z_])"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.ucpl",
          "match": "(\\$)[a-zA-Z_][a-zA-Z0-9_]*",
          "captures": {
            "1": {
              "name": "punctuation.definition.variable.ucpl"
            }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.and.ucpl",
          "match": "&(?!&)"
        },
        {
          "name": "keyword.operator.logical.or.ucpl",
          "match": "\\|\\|"
        },
        {
          "name": "keyword.operator.logical.implies.ucpl",
          "match": "=>"
        },
        {
          "name": "keyword.operator.priority.ucpl",
          "match": "\\^"
        },
        {
          "name": "keyword.operator.pipe.ucpl",
          "match": ">(?!=)"
        },
        {
          "name": "keyword.operator.plus.ucpl",
          "match": "\\+"
        },
        {
          "name": "keyword.operator.minus.ucpl",
          "match": "-"
        },
        {
          "name": "keyword.operator.separator.ucpl",
          "match": "\\|(?!\\|)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ucpl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ucpl",
              "match": "\\\\."
            },
            {
              "include": "#variables"
            }
          ]
        },
        {
          "name": "string.quoted.single.ucpl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.ucpl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.ucpl",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    }
  }
}
